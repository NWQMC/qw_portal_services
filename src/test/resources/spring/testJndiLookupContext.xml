<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:database_init.properties</value>
            </list>
        </property>
    </bean>

    <bean id="qwServicesEndpoint" class="java.lang.String">
        <constructor-arg value="http://localhost:8080/qw_portal_services/"/>
    </bean>

    <bean id="stewardEndpoint" class="java.lang.String">
        <constructor-arg value="http://localhost:8080/stewardsqw/"/>
    </bean>

    <bean id="nwisEndpoint" class="java.lang.String">
        <constructor-arg value="http://localhost:8080/nwisqw/"/>
    </bean>

    <bean id="storetEndpoint" class="java.lang.String">
        <constructor-arg value="http://localhost:8080/storetqw/"/>
    </bean>

    <bean id="qwDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="${jdbc.nwisQw.url}"/>
        <property name="username" value="${jdbc.nwisQw.username}"/>
        <property name="password" value="${jdbc.nwisQw.password}"/>
    </bean>
    
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
        <property name="accessToUnderlyingConnectionAllowed" value="true"/> 
        <property name="url" value="${jdbc.wqpCore.url}"/>
        <property name="username" value="${jdbc.wqpCore.username}"/>
        <property name="password" value="${jdbc.wqpCore.password}"/>
    </bean>

</beans>
