<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <import resource="classpath:/spring/testJndiLookupContext.xml"/>
    <import resource="classpath:/spring/qwPortalServicesContext.xml" />

    <bean id="srsnamesCsv" class="java.lang.String">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:testData/srsnames.csv" type="java.io.InputStream" />
            </bean>     
        </constructor-arg>
    </bean>

    <bean id="srsnamesJson" class="java.lang.String">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:testData/srsnames.json" type="java.io.InputStream" />
            </bean>     
        </constructor-arg>
    </bean>

    <bean id="summarySld" class="java.lang.String">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:testData/summary.sld" type="java.io.InputStream" />
            </bean>     
        </constructor-arg>
    </bean>

</beans>
