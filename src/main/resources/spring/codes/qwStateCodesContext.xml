<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.0.xsd
       		               http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- State -->
	<bean id="stateDataSource" class="java.net.URI" autowire="byName">
 		<constructor-arg index="0" value="http://localhost:8080/qw_portal_services/codes/states"/>
 	</bean>

	<bean id="nwisStateResource" class="gov.usgs.cida.resourcefolder.basicimpl.HTTPClientResourcePoint" autowire="byName">
 		<constructor-arg index="0" type="java.net.URI" value="#{nwisEndpoint}codes/states"/>
 		<constructor-arg index="1" ref="stateDataSource"/>
 		<constructor-arg index="2" type="java.net.URI" value="#{nwisEndpoint}codes/states"/>
 		<constructor-arg index="3" type="java.lang.String" value="Get State Codes from the NWIS System"/>
 		<constructor-arg index="4" type="org.w3c.dom.Document"><null/></constructor-arg>
	</bean>
 
	<bean id="stewardStateResource" class="gov.usgs.cida.resourcefolder.basicimpl.HTTPClientResourcePoint" autowire="byName">
 		<constructor-arg index="0" type="java.net.URI" value="#{stewardEndpoint}codes/states"/>
 		<constructor-arg index="1" ref="stateDataSource"/>
 		<constructor-arg index="2" type="java.net.URI" value="#{stewardEndpoint}codes/states"/>
 		<constructor-arg index="3" type="java.lang.String" value="Get State Codes from the Steward System"/>
 		<constructor-arg index="4" type="org.w3c.dom.Document"><null/></constructor-arg>
	</bean>
 
	<bean id="storetStateResource" class="gov.usgs.cida.resourcefolder.basicimpl.HTTPClientResourcePoint" autowire="byName">
 		<constructor-arg index="0" type="java.net.URI" value="#{storetEndpoint}codes/states"/>
 		<constructor-arg index="1" ref="stateDataSource"/>
 		<constructor-arg index="2" type="java.net.URI" value="#{storetEndpoint}codes/states"/>
 		<constructor-arg index="3" type="java.lang.String" value="Get State Codes from the Storet System"/>
 		<constructor-arg index="4" type="org.w3c.dom.Document"><null/></constructor-arg>
	</bean>
 
	<bean id="stateFolder" class="gov.usgs.cida.resourcefolder.basicimpl.SimpleFolder" autowire="byName">
 		<constructor-arg index="0" type="java.net.URI" value="http://localhost:8080/qw_portal_services/codes/states"/>
 		<constructor-arg index="1">
 			<set>
	 			<ref bean="nwisStateResource"/>
 	 			<ref bean="stewardStateResource"/>
	 			<ref bean="storetStateResource"/>
	 		</set>
 		</constructor-arg>
 		<constructor-arg index="2">
 			<set/>
 		</constructor-arg>
	</bean>
	
	<bean id="stateOuterFace" class="gov.usgs.cida.qw.resourcefolder.QwCodeOuterFace" autowire="byName">
 		<constructor-arg index="0" ref="stateFolder"/>
 		<property name="codeUri" ref="stateDataSource"/>
	</bean>
	
	<bean id="stateCodesMvcService" class="gov.usgs.cida.qw.webservice.codes.StateCodesMvcService" autowire="byName">
        <property name="agent" ref="agent"/>
		<property name="outerFace" ref="stateOuterFace"/>
		<property name="dataSource" ref="stateDataSource"/>
	</bean>
	
</beans>
