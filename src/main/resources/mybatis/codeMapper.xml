<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="codes">

    <resultMap id="codeResult" type="Code">
        <result property="value" column="code_value"/>
        <result property="desc" column="description"/>
        <result property="providers" column="providers"/>
    </resultMap>

    <sql id="textSearch">
        <if test="text != null">
            (upper(description) like '%' || upper(#{text}) || '%' or
             upper(code_value) like '%' || upper(#{text}) || '%')
        </if>
    </sql>
    
    <sql id="mlSearch">
        <if test="text != null">
            (upper(station_name) like '%' || upper(#{text}) || '%' or
             upper(site_id) like '%' || upper(#{text}) || '%')
        </if>
        <if test="organizationid != null">
            and organization = #{organizationid}
        </if>
        <if test="provider != null">
            and data_source = #{provider}
        </if>
    </sql>

    <sql id="codeValueSearch">
        where code_value = #{value,jdbcType=VARCHAR}
    </sql>
    
    <sql id="mlCodeValueSearch">
        where site_id = #{value,jdbcType=VARCHAR}
    </sql>

    <sql id="listAggProviders">
        listagg(data_source.text, ' ') within group (order by data_source.text) providers
    </sql>

    <sql id="selectStart">
        select c.code_value,
               min(c.description) description,
               <include refid="listAggProviders"/>
          from
    </sql>
    
    <sql id="monitoringLocationSelect">
        select c.site_id as code_value,
               min(c.station_name) description,
               <include refid="listAggProviders" />
        from station      
    </sql>

    <sql id="selectCount">
        select count(distinct code_value)
          from
    </sql>

    <sql id="joinDataSource">
        c
        join data_source
          on c.data_source_id = data_source.data_source_id
    </sql>

    <sql id="groupBy">
        group by c.code_value
    </sql>

    <sql id="groupAndOrderBy">
        <include refid="groupBy"/>
        order by c.code_value
    </sql>

    <sql id="groupAndOrderBySearch">
        <include refid="groupBy"/>
        order by
        <if test="text != null">
                 length(c.code_value),
        </if>
                 c.code_value
    </sql>
    
    <sql id="mlGroupBy">
        group by c.site_id
    </sql>

    <sql id="mlGroupAndOrderBy">
        <include refid="mlGroupBy"/>
        order by c.site_id
    </sql>

    <sql id="mlGroupAndOrderBySearch">
        <include refid="mlGroupBy"/>
        order by
        <if test="text != null">
                 length(c.site_id),
        </if>
                 c.site_id
    </sql>

    <sql id="paging">
        <if test="fetchSize != null">
            <choose>
                <when test="offset == null || offset == 0">
                    fetch first ${fetchSize} rows only
                </when>
                <otherwise>
                    offset ${offset} rows fetch next ${fetchSize} rows only
                </otherwise>
            </choose>
        </if>
    </sql>



    <select id="codeAssemblage" parameterType="String" resultMap="codeResult">
        <include refid="selectStart"/>
        assemblage
        <include refid="joinDataSource"/>
        <include refid="codeValueSearch"/>
        <include refid="groupAndOrderBy"/>
    </select>

    <select id="codeAssemblageList" parameterType="map" resultMap="codeResult">
        <include refid="selectStart"/>
        assemblage
        <include refid="joinDataSource"/>
        <where>
            <include refid="textSearch"/>
        </where>
        <include refid="groupAndOrderBySearch"/>
        <include refid="paging"/>
    </select>

    <select id="codeAssemblageCount" parameterType="map" resultType="int">
        <include refid="selectCount"/>
        assemblage
        <include refid="joinDataSource"/>
        <where>
            <include refid="textSearch"/>
        </where>
    </select>



